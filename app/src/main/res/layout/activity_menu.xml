<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.marc.map2.MenuActivity"
    android:background="@color/lightBlue">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go !"
        android:id="@+id/buttonGo"
        android:background="@color/lightBlue"
        android:textColor="#ffffff"
        android:textSize="64sp"
        android:textStyle="bold"
        android:elegantTextHeight="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="D&apos;où partez vous ?"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Se Localiser "
        android:id="@+id/buttonLocaliser"
        android:background="@color/darkBlue"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voulez-vous accueillir des gens ?"
        android:id="@+id/switchDisponibilite"
        android:checked="false"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/buttonLocaliser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textOn="Oui"
        android:textOff="Non"
        android:showText="true"
        android:splitTrack="false"
        android:singleLine="false"
        android:switchMinWidth="150dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="textStart"
        android:gravity="center" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchTransport"
        android:checked="false"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textOff="Voiture"
        android:textOn="Pied"
        android:showText="true"
        android:singleLine="false"
        android:splitTrack="false"
        android:enabled="true"
        android:gravity="center"
        android:nestedScrollingEnabled="false"
        android:longClickable="false"
        android:layout_marginBottom="27dp"
        android:text="Votre Moyen De Transport "
        android:layout_above="@+id/switchDisponibilite"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:switchMinWidth="150dp"
        android:textAlignment="viewStart" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="30sp"
        android:id="@+id/editTextPosition"
        android:background="@color/darkBlue"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:gravity="left"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/editTextDestination"
        android:layout_alignStart="@+id/editTextDestination"
        android:text="Ma position"
        android:textAlignment="center" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="30sp"
        android:id="@+id/editTextDestination"
        android:background="@color/darkBlue"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:gravity="left"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Où voulez-vous aller ?"
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_below="@+id/editTextPosition"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />

</RelativeLayout>
